<style>
  .sidebar {
    width: 280px;
    background: #1A1A1A;
    padding: 24px 16px;
    display: flex;
    flex-direction: column;
    border-radius: 16px 0 0 16px;
    margin: 16px 0 16px 16px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .user-profile {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 32px;
    padding-bottom: 24px;
    border-bottom: 1px solid #333;
  }

  .profile-picture {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 12px;
    border: 3px solid #4CAF50;
  }

  .profile-picture img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .user-name {
    color: #ffffff;
    font-size: 16px;
    font-weight: 600;
    text-align: center;
  }

  .nav-menu {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .nav-item {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    border-radius: 8px;
    text-decoration: none;
    color: #cccccc;
    transition: all 0.2s ease;
    font-weight: 500;
    font-size: 14px;
  }

  .nav-item:hover {
    background: #2C2C2C;
    color: #ffffff;
  }

  .nav-item.active {
    background: #2C2C2C;
    color: #4CAF50;
    border-left: 4px solid #4CAF50;
  }

  .nav-icon {
    width: 20px;
    height: 20px;
    margin-right: 12px;
    color: inherit;
  }

  .logo {
    margin-top: auto;
    padding-top: 24px;
    border-top: 1px solid #333;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .logo-icon {
    width: 24px;
    height: 24px;
    color: #4CAF50;
  }

  .logo-text {
    color: #ffffff;
    font-size: 18px;
    font-weight: bold;
    letter-spacing: 1px;
  }

  @media (max-width: 768px) {
    .sidebar {
      width: 80px;
      padding: 16px 8px;
    }

    .user-name,
    .nav-text,
    .logo-text {
      display: none;
    }

    .nav-item {
      justify-content: center;
      padding: 12px 8px;
    }

    .nav-icon {
      margin-right: 0;
    }
  }
</style> 