---
export interface Props {
  category: string;
  color?: string;
  icon?: string;
  text?: string;
}

const { category, color, icon, text } = Astro.props;

const categoryText = text || category.charAt(0).toUpperCase() + category.slice(1);
const categoryColor = color || '#9E9E9E';
---

<span class="category-tag" style={`background-color: ${categoryColor}`}>
  {icon && <span class="category-icon">{icon}</span>}
  <span class="category-text">{categoryText}</span>
</span>

<style>
  .category-tag {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 10px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: white;
    white-space: nowrap;
  }

  .category-icon {
    font-size: 14px;
  }

  .category-text {
    font-size: 11px;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .category-tag {
      padding: 4px 8px;
      gap: 4px;
    }

    .category-icon {
      font-size: 12px;
    }

    .category-text {
      font-size: 10px;
    }
  }

  @media (max-width: 480px) {
    .category-tag {
      padding: 3px 6px;
    }

    .category-text {
      font-size: 9px;
    }
  }
</style> 