---
export interface Props {
  title?: string;
  icon?: string;
  class?: string;
}

const { title, icon, class: className = '' } = Astro.props;
---

<div class={`card ${className}`}>
  {title && (
    <div class="card-header">
      {icon && (
        <svg class="card-icon" fill="currentColor" viewBox="0 0 20 20" set:html={icon} />
      )}
      <h3 class="card-title">{title}</h3>
    </div>
  )}
  <div class="card-content">
    <slot />
  </div>
</div>

<style>
  .card {
    background: #1A1A1A;
    border: 1px solid #333;
    border-radius: 12px;
    padding: 24px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
    transition: all 0.2s ease;
  }

  .card:hover {
    border-color: #444;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 20px;
  }

  .card-icon {
    width: 20px;
    height: 20px;
    color: #4CAF50;
  }

  .card-title {
    color: #ffffff;
    font-size: 18px;
    font-weight: 600;
    margin: 0;
  }

  .card-content {
    color: #cccccc;
  }
</style> 